import numpy as np
import matplotlib.pyplot as plt

x, y = np.ogrid[-1.5:1.5:800j, -1.5:1.5:1000j]

c = x + 1j*y
z = 0

for g in range(216):

    if g == 0:
        z = z**2 + c
    else:
        z = z**2 + -0.8+0.156j

threshold = 2
mask = np.abs(z) < threshold

plt.xlim(-1.5, 1.5)
plt.ylim(-1.5, 1.5)

plt.gca().set_aspect('equal')

plt.imshow(mask.T, extent=[-1.5, 1.5, -1.5, 1.5], cmap='twilight')

plt.show()
